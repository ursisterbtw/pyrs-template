// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cargo build",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "cargo test",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "check",
            "type": "shell",
            "command": "cargo check",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "start anvil",
            "type": "shell",
            "command": "anvil",
            "isBackground": true,
            "problemMatcher": []
        }
    ]
}